{
    "manifest_version": 2,
    "name": "Slack Mention",
    "version": "1.0.0",
    "description": "Slack message mention button",
    "short_name": "Slack Mention",
    "icons": {
        "128": "img/128.png"
    },
    "permissions": [
        "https://*/*",
        "background",
        "tabs"
    ],
    "background": {
        "scripts": ["js/background.js"]
    },
    "content_scripts": [
        {
            "matches": ["https://*.slack.com/*"],
            "js": ["js/extend.js"]
        }
    ],
    "web_accessible_resources": [
        "js/mention.js"
    ]
}